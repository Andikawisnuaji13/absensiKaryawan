<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.absensikaryawan">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/r"
        android:label="@string/app_name"
        android:roundIcon="@drawable/r"
        android:supportsRtl="true"
        android:theme="@style/Theme.AbsensiKaryawan">
        <activity
            android:name=".activity.AboutActivity"
            android:exported="false"
            android:parentActivityName=".activity.MainActivity"/>
        <activity
            android:name=".activity.DaftarCloudActivity"
            android:exported="false"
            android:parentActivityName=".activity.MainActivity"/>
        <activity
            android:name=".activity.ScanActivity2"
            android:exported="false"
            android:parentActivityName=".activity.MainActivity"/>
        <activity
            android:name=".activity.RegisterActivity"
            android:exported="false"
            android:parentActivityName=".activity.LoginActivity"/>
        <activity
            android:name=".activity.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".activity.splashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.DaftarActivity"
            android:exported="false"
            android:parentActivityName=".activity.MainActivity" />
        <activity
            android:name=".activity.MainActivity"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>